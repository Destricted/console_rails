<script type="text/javascript" src="http://localhost:9292/faye/client.js"> </script>

<script type="text/javascript">
        var client = new Faye.Client('http://localhost:9292/faye');
        var msg = client.subscribe('/home/create', function(message) {
                $("#content").append(message.text);
        });
        $(function() {
        $( "#submit" ).click(function() {
              $("#content").empty();
            });
        });
</script>

<%= form_tag('/cmd_exec', remote:'true', id: 'cmd_form') do  %>
  <%= text_area_tag 'cmd', nil, :size => '50x20' %>
  <%= submit_tag('Run', id: 'submit') %>
<% end %>

<div id="content"></div>
